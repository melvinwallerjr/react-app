{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "key": "header",
  "title": "Header",
  "description": "Site Header component.",
  "type": "object",
  "properties": {
    "title": {
      "title": "Site Title",
      "description": "Tittle for the site.",
      "type": "string",
      "format": "text"
    },
    "list": {
      "title": "Link List",
      "type": "array",
      "items": {
        "title": "Item",
        "type": "object",
        "properties": {
          "text": {
            "title": "Text",
            "type": "string",
            "format": "text"
          },
          "href": {
            "title": "Link URL",
            "type": "string",
            "format": "text"
          },
          "tracking": {
            "title": "Tracking",
            "type": "string",
            "format": "text"
          }
        }
      }
    }
  }
}
